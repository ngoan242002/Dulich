@model DuLichWeb.Models.BaiDang

@{
    ViewData["Title"] = "Add";
}

<link rel="stylesheet" href="~/css/adview.css" />


<h4>Thêm Bài Đăng</h4>
<hr />
<form class="form-group-item-parent" asp-action="Add" asp-controller="TaiKhoan" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group-item">
        <label asp-for="UrlImage" class="control-label"></label>
        <input asp-for="UrlImage" class="form-control" />
        <span asp-validation-for="UrlImage" class="text-danger"></span>
    </div>
    <div class="form-group-item">
        <label asp-for="TieuDe" class="control-label"></label>
        <input asp-for="TieuDe" class="form-control" />
        <span asp-validation-for="TieuDe" class="text-danger"></span>
    </div>
    <div class="form-group-item">
        <label asp-for="DiaDiem" class="control-label"></label>
        <input asp-for="DiaDiem" class="form-control" />
        <span asp-validation-for="DiaDiem" class="text-danger"></span>
    </div>
    <div class="form-group-item">
        <label asp-for="NgayBatDau" class="control-label"></label>
        <input asp-for="NgayBatDau" class="form-control" />
        <span asp-validation-for="NgayBatDau" class="text-danger"></span>
    </div>
    <div class="form-group-item">
        <label asp-for="NgayKetThuc" class="control-label"></label>
        <input asp-for="NgayKetThuc" class="form-control" />
        <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
    </div>
    <div class="form-group-item">
        <label asp-for="GiaTour" class="control-label"></label>
        <input asp-for="GiaTour" class="form-control" type="number" />
        <span asp-validation-for="GiaTour" class="text-danger"></span>
    </div>
    @*<div class="form-group-item">
            <label asp-for="Uemail" class="control-label"></label>
            <select asp-for="Uemail" class ="form-control" asp-items="ViewBag.Uemail"></select>
        </div>*@
    <div class="form-group-item">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="Home"> < Trở về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

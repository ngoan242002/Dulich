@model IEnumerable<DuLichWeb.Models.BaiDang>

@{
    ViewData["Title"] = "Index";
}

<h1 style="width: 100%; text-align: center;">Bài đăng của tôi</h1>

<p>
    <a asp-action="Add" asp-controller="TaiKhoan" class="btn btn-success">Thêm bài đăng</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UrlImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TieuDe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaDiem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayBatDau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKetThuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaTour)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.UrlImage" width=300 height=200 />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TieuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaDiem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayBatDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKetThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaTour)
            </td>
            <td>
                <a asp-action="Update" asp-controller="TaiKhoan" asp-route-id="@item.BaiDangId">Sửa</a> |
                <a asp-action="Delete" asp-controller="TaiKhoan" asp-route-id="@item.BaiDangId">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
